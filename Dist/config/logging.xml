<log4net>
    <appender name="RollingFile" type="Dive.Util.Logging.CWDFileAppender">
		<file value="logs/engine.log" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %-5level %logger %ndc - %message%newline" />
        </layout>
    </appender>
	
	<appender name="ScriptingConsole" type="Dive.Util.Logging.ScriptingConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value = "%message%newline" />
		</layout>
	</appender>
	
	<appender name="Console" type="log4net.Appender.ColoredConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%-5level %logger - %message%newline" />
        </layout>
    
		<mapping>
			<level value="DEBUG" />
			<foreColor value="Green" />
		</mapping>
		<mapping>
			<level value="INFO" />
			<foreColor value="White" />
		</mapping>
		<mapping>
			<level value="WARN" />
			<foreColor value="Yellow" />
		</mapping>
		<mapping>
			<level value="ERROR" />
			<foreColor value="Red" />
		</mapping>
		<mapping>
			<level value="FATAL" />
			<foreColor value="White" />
			<backColor value="Red" />
		</mapping>
	</appender>
	
    <root>
        <level value="INFO" />
        <appender-ref ref="RollingFile" />
		<appender-ref ref="ScriptingConsole" />
		<appender-ref ref="Console" />
    </root>
</log4net>